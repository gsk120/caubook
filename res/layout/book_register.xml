<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caubackground"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.cbproject.caubook.MainActivity" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.5">
        
        <TextView 
            android:id="@+id/text_book_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/text_book_register_titile"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5">
        
        <TextView 
            android:id="@+id/text_book_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="@string/text_book_register_list_title"/>
        
        <TextView 
            android:id="@+id/text_book_list_exist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/text_book_register_exist"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="6">
        
        <ListView 
            android:id="@+id/list_book_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal">
        
        <Button
            android:id="@+id/btn_book_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/btn_book_register"/>
        
        <Button 
            android:id="@+id/btn_book_register_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_book_register"
            android:layout_toRightOf="@+id/btn_book_register"
            android:layout_toEndOf="@+id/btn_book_register"
            android:text="@string/btn_book_rgiseter_pass"/>
        
    </RelativeLayout>
    
</LinearLayout>